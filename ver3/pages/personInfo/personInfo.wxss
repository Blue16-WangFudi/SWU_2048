.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  /* height: 90vh; */
}

.profile-header {
  display: flex;
  width: 100%;
  margin-bottom: 30rpx;
  align-items: center;
}

.profile-avatar-container {
  flex: none;
  padding: 20rpx;
  width: 260rpx; /* 设置头像容器尺寸 */
  height: 350rpx;
  border-radius: 22%;
  overflow: hidden; /* 防止图片溢出容器 */
}

.profile-avatar {
  width: 100%; /* 完整填充容器 */
  height: 100%;
}

.profile-info-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;

}

.function-name {
  font-weight: bold;
  font-size: 45rpx;
  margin-bottom: 25rpx;
}

.info-item {
  font-size: 29rpx;
  margin-bottom: 20rpx;
}

.function-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
  width: 100%;
  /* background-color: #ffffff; */
  /* box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 20rpx; */
}

.function-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
  border-bottom: 1px solid rgb(238, 238, 238);
  background-color: #f9f9f9; /* 添加背景颜色 */
  border-radius: 28px; /* 添加边框圆角 */
  box-shadow: 0 2px 4px rgba(12, 12, 12, 0.1); /* 添加阴影效果 */
  transition: background-color 0.4s ease; /* 添加过渡效果 */
  width: 220px; 
  margin-top: 40vh;
  font-weight: bold;
}


.divider {
  height: 3rpx; /* 分隔线的宽度 */
  width: 95%; /* 分隔线的高度，占满容器高度 */
  background-color: #a7a5a5; /* 分隔线的颜色 */
  margin-left: 3vw;
  margin-right: 3vw;
  align-items: center;
  margin-bottom: 20px;
}


checkbox-group {
  position: relative; /* 设置定位，确保z-index生效 */
  z-index: 2; /* 设置层级，确保位于顶层 */
  display: flex;
  align-items: center;
  margin-bottom: 10px; /* 在复选框和按钮之间添加一些空间 */
  margin-left: 20px;
}

checkbox {
  transform: scale(0.6); /* 调整复选框的大小 */
}

label {
  font-size: 14px; /* 设置标签文字的大小 */
  color: #757575; /* 设置标签文字的颜色 */
}