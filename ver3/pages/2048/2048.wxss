/* pages/2048/2048.wxss */
.container {
  color: #776e65;
  background-color: #f1f3fd;
  height: 100vh;
  position: relative;
} 
.head {
  text-align: center;
  position: absolute;
  top: 7vh;
}
.lside {
  width: 130px;
  height: 100px;
  box-sizing: border-box;
  float: left;
  position: relative;
  margin-right: 30px;
}
.title {
  font-size: 40px;
  font-weight: bold;  
  position: absolute;
  bottom: 50px;
  left: 10px;
}
.play {
  font-size: 20px;
  background-color: #b5aff0;
  color: #fff;
  border-radius: 5px;
  width: 130px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0;
}
.rside {
  background-color: #b5aff0;
  float: right;
  width: 120px;
  height: 100px; 
  padding-top: 10px;
  box-sizing: border-box;
  border-radius: 5px; 
  opacity: 0.7;
}
.rside text {
  display: block;
  text-align: center;
  font-size: 30px;
  font-weight: bold;
}
.score {
  color: #fff;
}
/* =========================== game ====================  */
.game {
  margin-top: 15vh;
  position: absolute;
  padding-top: 5vw; 
  padding-left: 1vw;
  background: #c5c9e2;
  border-radius: 6px;
  width: 93vw;
  height: 93vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;/* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;/* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}
.cell {
  width: 19vw;
  height: 19vw; 
  margin-left: 3vw;
  margin-bottom: 3vw;
  float: left;
  border-radius: 5px;
  box-sizing: border-box;
  background: #f2f5f7;
  overflow: hidden;
}
.cell-con { 
  width: 19vw;
  height: 19vw; 
  line-height: 19vw;
  position: absolute;
  font-size: 35px;
  font-weight: bold;
  text-align: center;
  border-radius: 5px;
}  
.cell-con-2 { background: #f3eaf8; }
.cell-con-4 { background: #e9d8f5; }
.cell-con-8 {
  color: #3f3356; /* 文字颜色调整为深紫色以增加可读性 */
  background: #C6CEFC;
}
.cell-con-16 {
  color: #3f3356;
  background: #b5aff0;
}
.cell-con-32 {
  color: #3f3356;
  background: #9c93e8;
}
.cell-con-64 {
  color: #3f3356;
  background: #8377df;
}
.cell-con-128 {
  color: #3f3356;
  background: #6a5ed6;
  font-size: 30px;
}
.cell-con-256 {
  color: #3f3356;
  font-size: 30px;
  background: #5149cd;
}
.cell-con-512 {
  color: #3f3356;
  font-size: 30px;
  background: #3c3db4;
}
.cell-con-1024 {
  color: #ffffff; /* 文字颜色调整为白色以增加可读性 */
  font-size: 25px;
  background: #2c2a9b;
}
.cell-con-2048 {
  color: #ffffff;
  font-size: 25px;
  background: #212079;
}





.game-over {
  position: absolute;
  z-index: 3;
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 20vw;
  box-sizing: border-box;
} 
.game-over text {
  display: block;
}
.nowScore {
  font-size: 20px;
  margin-bottom: 10px;
}
.pro {
  font-weight: bold;
  font-size: 30px;
}
.pro2 {
  font-weight: bold;
  font-size: 30px;
  margin-bottom: 20px;
  margin-left: -20px;
}